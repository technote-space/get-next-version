{
  "name": "@technote-space/github-action-version-helper",
  "version": "0.6.13",
  "description": "Version helper for GitHub Actions.",
  "keywords": [
    "github",
    "github actions"
  ],
  "homepage": "https://github.com/technote-space/github-action-version-helper",
  "bugs": {
    "url": "https://github.com/technote-space/github-action-version-helper/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/technote-space/github-action-version-helper.git"
  },
  "license": "MIT",
  "author": {
    "name": "Technote",
    "email": "technote.space@gmail.com",
    "url": "https://technote.space"
  },
  "type": "module",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.cjs"
  },
  "main": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --emitDeclarationOnly && rollup -c",
    "cover": "vitest run --coverage",
    "postinstall": "[ -n \"$CI\" ] || [ ! -f node_modules/.bin/husky ] || husky install",
    "lint": "eslint 'src/**/*.ts' --cache",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "prepublishOnly": "[ -n \"$CI\" ] || [ ! -f node_modules/.bin/pinst ] || pinst --disable",
    "postpublish": "[ -n \"$CI\" ] || [ ! -f node_modules/.bin/pinst ] || pinst --enable",
    "test": "yarn lint && yarn typecheck && yarn cover",
    "typecheck": "tsc --noEmit",
    "update": "npm_config_yes=true npx npm-check-updates -u --timeout 100000 && yarn install && yarn upgrade && yarn audit"
  },
  "dependencies": {
    "@actions/github": "^5.1.1",
    "@octokit/openapi-types": "^19.0.0",
    "@technote-space/github-action-helper": "^5.3.17",
    "@technote-space/github-action-log-helper": "^0.2.19"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@octokit/types": "^12.0.0",
    "@rollup/plugin-typescript": "^11.1.4",
    "@sindresorhus/tsconfig": "^4.0.0",
    "@technote-space/github-action-test-helper": "^0.11.17",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "@vitest/coverage-c8": "^0.33.0",
    "eslint": "^8.50.0",
    "eslint-plugin-import": "^2.28.1",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "nock": "^13.3.3",
    "pinst": "^3.0.0",
    "rollup": "^3.29.4",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "publishConfig": {
    "access": "public"
  }
}
